 <script>
 function changecolor(color){
 if(color=="red"){
 document.getElementById("para").style.color="red"
 }else if(color=="green")
 {
 document.getElementById("para").style.color="green"
 }
 else{
 document.getElementById("para").style.color="blue"
 }
 }
 function changesize(psize){
 if(psize=="10"){
 document.getElementById("para").style.fontSize="10px"
 }else if(psize=="20")
 {
 document.getElementById("para").style.fontSize="20px"
 }
 else{
 document.getElementById("para").style.fontSize="30px"
 }
 }
 
 function changefamily(family){
 if(family=="Forte"){
 document.getElementById("para").style.fontFamily="Forte"
 }else if(family=="Times")
 {
 document.getElementById("para").style.fontFamily="Times"
 }
 else{
 document.getElementById("para").style.fontFamily="Arial"
 }
 }
 
 </script>
